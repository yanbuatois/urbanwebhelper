{% extends "layouts/layout.twig" %}

{% set player = default.player %}

{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" type="text/css" href="/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/lib/fontawesome/css/fontawesome.min.css" />
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <nav class="navbar navbar-expand-md navbar-dark bg-dark col-lg-12 sticky-top">
                <a class="navbar-brand" href="#">{% block brand %}Urban Web Helper{% endblock %}</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Afficher le menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item {% if page_selected|default('home') == 'home' %}active{% endif %}">
                            <a class="nav-link" href="/"><span class="fa fa-home"></span> Accueil</a>
                        </li>
                        <li class="nav-item {% if page_selected == 'missions' %}active {% endif %}">
                            <a class="nav-link" href="/missions"><span class="fa fa-bullseye"></span> Missions</a>
                        </li>
                        <li class="nav-item {% if page_selected == 'collection' %}active{% endif %}">
                            <a class="nav-link" href="/collection"><span class="fa fa-suitcase"></span> Collection</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item {% if page_selected == 'user' %}active{% endif %}">
                            <a class="nav-link" href="/user">
                                {#<span class="fa fa-user"></span>#}<img alt="avatar" src="{{ player.pictureURL }}" class="img-mini rounded-circle" /> {{ player.name }}
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 flex-grow-1 main-container">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </div>
    {% block scripts %}
        <script src="/lib/jquery/jquery-3.3.1.min.js"></script>
        <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/lib/fontawesome/js/all.min.js"></script>
    {% endblock %}
{% endblock %}
